# Launch Brave
super + q
	brave
super + ctrl + q
	brave --incognito
super + alt + q
	brave --tor

# Launch wa
super + shift + w
	whatsapp-nativefier

# Launch ranger
super + r
	exec $TERMINAL ranger

# Launch outlook
super + e 
	b https://outlook.office365.com/mail/inbox

# Launch teams
super + shift + t
	teams
	
# Launch spotify 
super + shift + m
	LD_PRELOAD=/usr/local/lib/spotify

# Launch discord
super + shift + d
	discord
# Launch password manager
#super + p
#$dmenu drop down

