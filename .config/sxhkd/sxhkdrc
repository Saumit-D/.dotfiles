# Launch Brave
super + q
	brave
super + ctrl + q
	brave --incognito
super + alt + q
	brave --tor

##(Temp Launch)
# Launch ranger
super + r
   exec $TERMINAL ranger
# Launch pulsemixer
super + p
   exec $TERMINAL pulsemixer
#Launch <go,h,bash>top
super + shift {g,h,b}
   exec $TERMINAL {go,h,bash}top

#Launch galculator - a GTK 2/3 based scientific calculator
XF86Calculator
    exec $TERMINAL -c "stfloat" -e galculator

